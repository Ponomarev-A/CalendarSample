<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.sbrt.ponomarev.calendarsample.ui.CalendarEvent">

    <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

            tools:text="Title"
    />

    <EditText
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            tools:text="Description"

    />

    <Space android:layout_width="match_parent" android:layout_height="40dp"/>

    <android.inputmethodservice.ExtractEditText
            android:id="@+id/event_date_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:hint="@string/date_from"

            tools:text="To"
    />

    <android.inputmethodservice.ExtractEditText
            android:id="@+id/event_date_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:hint="@string/date_to"

            tools:text="From"
    />


</LinearLayout>
